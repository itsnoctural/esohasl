{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "server#build": {
      "outputs": ["dist/**"]
    },
    "web#build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "cache": false
    }
  }
}
